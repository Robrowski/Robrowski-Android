<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robrowski.automatictimesheet.activity.fragment.FabCreateMenuFragment">


    <com.software.shell.fab.ActionButton
        android:id="@+id/fab_create_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/fab_material_lime_900"
        fab:hide_animation="@anim/fab_roll_to_down"
        fab:image="@drawable/ic_add_white_24dp"
        fab:image_size="36dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_roll_from_right"
        fab:type="normal"
        fab:rippleEffect_enabled="false"
        android:cropToPadding="false"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <com.software.shell.fab.ActionButton
        android:id="@+id/fab_new_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:visibility="invisible"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/ic_add_white_24dp"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="24dp"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <com.software.shell.fab.ActionButton
        android:id="@+id/fab_new_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/ic_label_white_24dp"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"          />

    <com.software.shell.fab.ActionButton
        android:id="@+id/fab_new_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:visibility="invisible"
        fab:button_color="@color/colorAccent"
        fab:button_colorPressed="@color/colorAccent"
        fab:hide_animation="@anim/fab_scale_down"
        fab:image="@drawable/ic_place_white_24dp"
        fab:image_size="24dp"
        fab:shadow_color="#757575"
        fab:shadow_radius="1.0dp"
        fab:shadow_xOffset="0.5dp"
        fab:shadow_yOffset="1.0dp"
        fab:show_animation="@anim/fab_scale_up"
        fab:type="mini"
        android:cropToPadding="false"
        android:layout_marginBottom="88dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>





</RelativeLayout>
